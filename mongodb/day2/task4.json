[
  {
    "$unwind" : "$Courses"
  },
  {
    "$group" : {
      "_id": "$FacultyID",
      "AverageGrade": { "$avg": "$Courses.grade" }
    }
  },
  {
    "$project" :
      {
        "_id": 0,
        "FacultyID": "$_id",
        "AverageGrade": 1
      }
  }, {
    "$out": {
      "db" : "FacultySystemDB",
      "coll" : "FacultyGrades"      
    }
  }
]